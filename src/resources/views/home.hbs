<div class="mt-4">
    <h2>NodeJs Course</h2>
    <div class="row">
        {{#each courses }}
        <div class="col-sm-6 col-lg-4" style="margin-top: 20px;">
            <div class="card">
                <a href="courses/{{this.slug}}">
                <img src="{{this.image}}" class="card-img-top" alt="...">
                </a>
                
                <div class="card-body">
                    <a href="courses/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                        <p class="card-text">{{this.description}}</p>
                     <a href="courses/{{this.slug}}" class="btn btn-primary">Watch</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>